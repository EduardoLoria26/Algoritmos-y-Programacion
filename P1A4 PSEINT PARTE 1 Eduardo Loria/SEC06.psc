// Escribir un algoritmo que calcule el área de un triángulo
Algoritmo SEC06
	Definir Base, Altura Como Reales;
	
	Escribir "Introduzca la base: ";
	Leer Base;
	Escribir "Introduzca la altura: ";
	Leer Altura;
	
	Escribir "El área del triángulo es: ", (Base * Altura)/ 2;
FinAlgoritmo